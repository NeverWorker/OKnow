<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"    
	>
	
    <LinearLayout
        android:id="@+id/main_tab_chat"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
	    android:layout_gravity="center|bottom"
	    android:orientation="vertical" 
        >
        <View
            android:layout_height="0dip"
    	    android:layout_width="match_parent"
	        android:layout_weight="3"
            />
	    <ImageView
	        android:contentDescription="@string/imageview"
	        android:layout_height="0dip"
    	    android:layout_width="match_parent"
	        android:layout_weight="5"
    	    android:adjustViewBounds="true"
    	    android:scaleType="fitCenter"
   	        android:layout_gravity="center"
	        android:src="@drawable/main_tab_chat" 
	        />
	    <TextView 
	        android:layout_height="0dip"
    	    android:layout_width="match_parent"
	        android:layout_weight="2"
	        android:gravity="center"
	        android:text="@string/maintab_chat"
	        />
        
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_tab_map"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
	    android:layout_gravity="center|bottom"
	    android:orientation="vertical" 
        >
        <View
            android:layout_height="0dip"
    	    android:layout_width="match_parent"
	        android:layout_weight="3"
	        />
	    <ImageView
	        android:contentDescription="@string/imageview"
	        android:layout_height="0dip"
    	    android:layout_width="match_parent"
	        android:layout_weight="5"
    	    android:adjustViewBounds="true"
	        android:layout_gravity="center"
        	android:src="@drawable/main_tab_map" 
        />
	    <TextView 
	        android:layout_height="0dip"
    	    android:layout_width="match_parent"
	        android:layout_weight="2"
	        android:gravity="center"        
	        android:text="@string/maintab_map"
	        />        
    </LinearLayout>	    
    <ImageView
        android:contentDescription="@string/imageview"
        android:id="@+id/main_tab_ov"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:src="@drawable/main_tab_ov_off" 
        />    
    <LinearLayout
        android:id="@+id/main_tab_info"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
	    android:layout_gravity="center|bottom"
	    android:orientation="vertical" 
        >
        <View
            android:layout_height="0dip"
    	    android:layout_width="match_parent"
	        android:layout_weight="3"
	        />
	    <ImageView
	        android:contentDescription="@string/imageview"
	        android:layout_height="0dip"
    	    android:layout_width="match_parent"
	        android:layout_weight="5"
    	    android:adjustViewBounds="true"
    	    android:scaleType="fitCenter"
   	        android:layout_gravity="center"
	        android:src="@drawable/main_tab_info" 
        />
	    <TextView 
	        android:layout_height="0dip"
    	    android:layout_width="match_parent"
	        android:layout_weight="2"
	        android:gravity="center"
	        android:text="@string/maintab_info"
	        />        
    </LinearLayout>	    
    <LinearLayout
        android:id="@+id/main_tab_setting"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
	    android:layout_gravity="center|bottom"
	    android:orientation="vertical" 
        >
        <View
            android:layout_height="0dip"
    	    android:layout_width="match_parent"
	        android:layout_weight="3"
	        />
	    <ImageView
	        android:contentDescription="@string/imageview"
	        android:layout_height="0dip"
    	    android:layout_width="match_parent"
	        android:layout_weight="5"
    	    android:adjustViewBounds="true"
    	    android:scaleType="fitCenter"
   	        android:layout_gravity="center"
        	android:src="@drawable/main_tab_setting" 
        />    
	    <TextView 
	        android:layout_height="0dip"
    	    android:layout_width="match_parent"
	        android:layout_weight="2"
	        android:gravity="center"
	        android:text="@string/maintab_setting"
	        />        
    </LinearLayout>	    
</LinearLayout>
